{
    "name": "james2037/mcp-php-server",
    "description": "Model Context Protocol server framework in PHP",
    "type": "library",
    "keywords": ["mcp"],
    "homepage": "https://github.com/james2037/mcp-php-server",
    "license": "MIT",
    "authors": [
        {
            "name": "james2037",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.1",
        "psr/log": "^1.1 || ^2.0 || ^3.0",
        "psr/http-message": "^1.0 || ^2.0",
        "nyholm/psr7": "^1.8",
        "nyholm/psr7-server": "^1.0",
        "laminas/laminas-httphandlerrunner": "^2.9"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "phpstan/phpstan": "^1.10",
        "squizlabs/php_codesniffer": "^3.11",
        "phpstan/phpstan-phpunit": "^1.4"
    },
    "autoload": {
        "psr-4": {
            "MCP\\Server\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "MCP\\Server\\Tests\\": "tests/"
        }
    }
}
